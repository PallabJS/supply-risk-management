{
  "name": "swarm-risk-management-mono",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run --workspace=apps/backend dev",
    "services:all": "npm run --workspace=apps/backend services:all",
    "start:all": "npm run infra:up && npm run services:all",
    "shutdown:all": "pkill -f \"scripts/run-all-services.mjs|scripts/run-all-connectors.mjs|src/workers/signal-ingestion-worker.ts|src/workers/universal-connector-worker.ts|src/workers/risk-classification-worker.ts|src/workers/risk-engine-worker.ts|src/workers/mitigation-planning-worker.ts|src/workers/notification-worker.ts|src/workers/planning-impact-worker.ts|src/adapters/signal-ingestion-gateway/index.ts|src/adapters/planning-gateway/index.ts|src/adapters/risk-classification-llm-adapter/index.ts\" || true && npm run infra:down",
    "web:dev": "npm run --workspace=apps/web dev",
    "web:build": "npm run --workspace=apps/web build",
    "backend:build": "npm run --workspace=apps/backend build",
    "test": "npm run --workspace=apps/backend test",
    "test:integration": "npm run --workspace=apps/backend test:integration",
    "infra:up": "npm run --workspace=apps/backend infra:up",
    "infra:down": "npm run --workspace=apps/backend infra:down",
    "infra:logs": "npm run --workspace=apps/backend infra:logs",
    "redis:clear": "npm run --workspace=apps/backend redis:clear",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@esbuild/darwin-arm64": "^0.27.3"
  }
}
