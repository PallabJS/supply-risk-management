{
  "connectors": [
    {
      "name": "weather-india",
      "type": "INDIA_WEATHER",
      "enabled": true,
      "pollIntervalMs": 10000,
      "requestTimeoutMs": 10000,
      "maxRetries": 2,
      "outputStream": "raw-input-signals",
      "leaseTtlSeconds": 30,
      "retryConfig": {
        "baseDelayMs": 150,
        "maxDelayMs": 10000,
        "jitterRatio": 0.1
      },
      "providerConfig": {
        "baseUrl": "https://api.weatherapi.com/v1",
        "userAgent": "swarm-risk-management/0.1",
        "maxAlertsPerPoll": 50,
        "apiKey": "${WEATHER_API_KEY}"
      }
    }
  ]
}
